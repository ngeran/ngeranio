# ============================================
# AI AUTOMATION CONFIGURATION
# ============================================

# --------------------------------------------
# Site Configuration
# --------------------------------------------
SITE_URL="https://ngeranio.com"
SITE_NAME="ngeran[io]"
HUGO_VERSION="0.152.2"
HUGO_EXTENDED=true

# --------------------------------------------
# Git Configuration
# --------------------------------------------
GIT_AUTHOR_NAME="AI Agent"
GIT_AUTHOR_EMAIL="ai@ngeranio.com"
GIT_REMOTE="origin"
GITHUB_REPO="ngeran/ngeranio"
GITHUB_DEFAULT_BRANCH="main"

# --------------------------------------------
# Content Configuration
# --------------------------------------------
VALID_CATEGORIES=("ospf" "bgp" "mpls" "junos")
CONTENT_DIR="content/routing"
MIN_WORD_COUNT=500
DRAFT_MODE=true

# --------------------------------------------
# Quality Gate Configuration
# --------------------------------------------
QUALITY_STRICT_MODE=true
QUALITY_WARN_ON_LINK_ERRORS=true
QUALITY_CHECK_EXTERNAL_LINKS=true
QUALITY_MIN_WORD_COUNT=500
QUALITY_REQUIRE_FEATURED_IMAGE=true
ALLOW_DRAFT_DEPLOY=false

# --------------------------------------------
# Build Configuration
# --------------------------------------------
BUILD_OUTPUT_DIR="public"
BUILD_PREVIEW_PORT=1313
BUILD_PREVIEW_BIND="0.0.0.0"
BUILD_MINIFY=true

# --------------------------------------------
# Deployment Configuration
# --------------------------------------------
DEPLOY_AUTO_PUSH=true
DEPLOY_REQUIRE_APPROVAL=false
DEPLOY_CREATE_BACKUPS=true
DEPLOY_BACKUP_PREFIX="pre-deploy"
DEPLOY_ROLLBACK_ON_FAILURE=true

# --------------------------------------------
# Cloudflare Configuration
# --------------------------------------------
# Get your account ID from: https://dash.cloudflare.com/ â†’ Workers & Pages
# Leave empty if you haven't set it up yet
CLOUDFLARE_ACCOUNT_ID=""
CLOUDFLARE_PROJECT_NAME="ngeranio"
# Get API token from: https://dash.cloudflare.com/profile/api-tokens
# Required scopes: Account > Cloudflare Pages > Edit
CLOUDFLARE_API_TOKEN=""

# --------------------------------------------
# Automation Configuration
# --------------------------------------------
AUTOMATION_LOG_FILE="logs/ai-automation.log"
AUTOMATION_LOG_LEVEL="INFO"
AUTOMATION_LOG_RETENTION_DAYS=30
AUTOMATION_BACKUP_DIR="/tmp/ai-automation-backups"
AUTOMATION_LOCK_FILE="/tmp/ai-automation.lock"
AUTOMATION_MAX_RETRIES=3

# --------------------------------------------
# Monitoring Configuration
# --------------------------------------------
MONITOR_DEPLOYMENT=true
MONITOR_HEALTH_CHECK_URL="https://ngeranio.com"
MONITOR_TIMEOUT_SECONDS=30
MONITOR_MAX_RETRIES=6
MONITOR_CHECK_INTERVAL_SECONDS=10

# --------------------------------------------
# Feature Flags
# --------------------------------------------
ENABLE_AUTO_COMMIT=true
ENABLE_GITHUB_PR=true
ENABLE_SCREENSHOTS=false
ENABLE_ACCESSIBILITY_AUDIT=false
ENABLE_PERFORMANCE_AUDIT=false

# --------------------------------------------
# Paths
# --------------------------------------------
SCRIPTS_DIR="scripts"
CONTENT_TEMPLATE=".ai-content-template.md"
AI_AGENT_GUIDE="AI_AGENT_GUIDE.md"

# --------------------------------------------
# Phase 2: Content Management Settings
# --------------------------------------------
# Content Template and Structure
CONTENT_TEMPLATE_PATH=".ai-content-template.md"
CONTENT_AUTO_BACKUP=true
CONTENT_EDITOR_CODE="code"  # or vim, nano, etc.

# Required Sections in Posts
QUALITY_REQUIRED_SECTIONS=("Overview" "Key Concepts" "Configuration" "Summary")
QUALITY_CHECK_READABILITY=true
QUALITY_CHECK_SPELLING=false

# Image Settings
IMAGE_DEFAULT_WIDTH=1200
IMAGE_DEFAULT_HEIGHT=630
IMAGE_PLACEHOLDER_COLOR="#5e81ac"
IMAGE_ALLOW_PLACEHOLDER=true  # Allow placeholder images in drafts

# Content Validation
CONTENT_VALIDATE_LINKS=true
CONTENT_VALIDATE_IMAGES=true
CONTENT_CHECK_CODE_BLOCKS=true
CONTENT_MIN_HEADINGS=3

# Draft Management
DRAFT_AUTO_PREVIEW=false
DRAFT_VALIDATE_ON_CREATE=true
DRAFT_NOTIFY_ON_COMPLETE=true
